# Dynamic theme colors
config-file = ?"~/.config/omarchy/current/theme/ghostty.conf"

# Font
font-family = "CaskaydiaMono Nerd Font"
font-style = Regular
font-size = 12

# Window
window-theme = ghostty
window-padding-x = 14
window-padding-y = 14
confirm-close-surface=false
resize-overlay = never
gtk-toolbar-style = flat

# Cursor styling
cursor-style = "block"
cursor-style-blink = false
cursor-text = #0e091d
cursor-color = #ff7f41

# Cursor styling + SSH session terminfo
# (all shell integration options must be passed together)
shell-integration-features = no-cursor,ssh-env

# Keyboard bindings
# After OS-level Alt/Control swap:
# - Physical Alt key sends Control keycodes
# - Physical Control key sends Alt keycodes
#
# So:
# - Physical Alt+C → OS sees Control+C → Ghostty sees Control+C → interrupt process
# - Physical Control+C → OS sees Alt+C → Ghostty sees Alt+C → copy to clipboard
# - Physical Control+V → OS sees Alt+V → Ghostty sees Alt+V → paste from clipboard
keybind = alt+c=text:\x03
keybind = control+c=copy_to_clipboard
keybind = control+v=paste_from_clipboard
